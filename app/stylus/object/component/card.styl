.c-card
  background: #fff
  border: 1px solid #B2B9BF
  border-radius 4px
  min-height: 30%
  padding 10px 20px
  position relative
  &__title
    position relative
    font-size 20px
    letter-spacing 2px
    padding 0 0 10px 0
    margin: 0 0 20px 0
    border-bottom: 1px solid bluegray

.c-card__edit
  cursor: pointer
  margin:  0 0 0 15px
