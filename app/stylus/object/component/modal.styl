.c-modal
  position fixed
  background rgba(0, 0, 0, 0.7);
  width 100%
  height 100%
  z-index: 2
  &__content
    background: #fff
    width: 800px
    padding: 60px 30px
    border-radius: 4px
    position absolute
    top 40%
    left 50%
    transform: translate(-50%, -40%);
  &__cancel
    position absolute
    top 5px
    right 20px
    font-size 30px
    font-weight bold
    color bluegray
  &__title
    font-size 20px
    text-align: center
    margin: 0 0 30px 0
  .new-task-area
    display flex
    justify-content: center
    margin: 0 0 30px 0
    .new-task-input
      font-size 24px
      width 400px
      margin 0 20px 0 0
      border-bottom: 1px solid bluegray
      outline: 0
    .new-task-category
      padding 5px 20px
      outline: 0
      border 1px solid bluegray

.opacity-modal
  width: 100%
  height 100%
  position fixed
  z-index: 1
  opacity: 0.1

.c-edit-modal
  position absolute
  background: #fff
  border-radius: 2px
  z-index: 2
  border 1px solid bluegray
  padding: 5px 10px
  font-size 14px
  top 20px
  right -40px
  &__text
    &:first-child
      margin 0 10px 0 0
