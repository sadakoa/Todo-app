.c-button
  display block
  margin 0 auto
  width 200px
  height 50px
  line-height 50px
  text-align: center
  border-radius 2px
  letter-spacing 2px
  transition all 300ms ease-in-out

.is-create
  background: #26A69A
  color #fff
  font-weight bold
  &:hover
    background: #00796B

.is-cancel
  background: red
  color #fff
  font-weight bold
  &:hover
    background: #AB4533

.editText
  border-bottom: 1px solid bluegray
  margin: 0 5px 10px 0
  font-size 13px
.c-edit-button
  @extend .c-button
  display inline-block
  width auto
  height 30px
  padding 0 10px
  font-size 12px
  line-height 30px
  vertical-align bottom
