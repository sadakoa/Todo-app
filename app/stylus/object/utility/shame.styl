// ロゴ
.p-logo-area
  margin: 0 0 40px 0

.p-logo-image
  display block
  margin: 0 auto 5px

.p-task-logArea__remove
  text-decoration: underline
  font-size 12px

.p-logo
  text-align: center
  color bluegray
  font-size 16px
  letter-spacing 2px

// サイドバータスク追加エリア
.p-task-wholeArea
  margin: 0 0 40px 0
  &__text
    margin: 10px 0 0 0
    text-align center
    &--anchor
      text-decoration underline
      color: red
      font-size 13px

.p-task-logArea
  &__title
    font-size 18px
    font-weight 700
    padding-bottom: 10px
    margin-bottom: 10px
    border-bottom: 1px solid bluegray
  .log-area
    height: 400px
    overflow-y: scroll
    .p-task-log
      font-size 12px
      padding: 7px 7px
      border-radius 2px
      color: #7A868F

// コピーライトエリア
.p-copyright
  position absolute
  bottom 20px
  font-size 10px

// カードエリア
.p-task-addButton
  position absolute
  top 13px
  right 20px

// リスト
.p-task-listArea
  display flex
  flex-wrap: wrap
  min-height 230px

.c-sticky
  height: 69px
  cursor pointer
  background #fff
  box-shadow: 0 2px 0px #BFBFBF
  position relative
  font-size 18px
  border: 1px solid #BFBFBF
  border-radius 4px
  width: 30%
  padding: 20px 50px 20px 20px
  margin: 0 20px 20px 0
  position relative
  z-index 1

.p-task-edit
  position absolute
  top 27%
  right 20px
