// ロゴ
.p-logo-area
  margin: 0 0 40px 0

.p-logo-image
  display block
  margin: 0 auto 5px

.p-task-logArea__remove
  text-decoration: underline
  font-size 12px

.p-logo
  text-align: center
  color bluegray
  font-size 16px
  letter-spacing 2px

// サイドバータスク追加エリア
.p-task-wholeArea
  margin: 0 0 40px 0
  &__text
    margin: 10px 0 0 0
    text-align center
    &--anchor
      text-decoration underline
      color: red
      font-size 13px

.p-task-logArea
  &__title
    font-size 18px
    font-weight 700
    padding-bottom: 10px
    margin-bottom: 10px
    border-bottom: 1px solid bluegray
  .log-area
    height: 400px
    overflow-y: scroll
    .p-task-log
      font-size 12px
      padding: 7px 7px
      border-radius 2px
      color: #7A868F

// コピーライトエリア
.p-copyright
  position absolute
  bottom 20px
  font-size 10px

// カードエリア
.p-task-addButton
  position absolute
  top 13px
  right 20px

// リスト
.p-task-listArea
  display flex
  flex-wrap: wrap
  // background: red
  height: 80%

.c-sticky
  cursor pointer
  background #fff
  color: #fff
  box-shadow: 0 2px 0px #BFBFBF
  font-size 14px
  font-weight bold
  border: 1px solid #BFBFBF
  border-radius 4px
  width: 20%
  text-align center
  padding: 40px 20px 20px
  margin: 0 20px 20px 0
  position: relative
  z-index: 2

#backlog .c-sticky
  background #2196F3

#doing .c-sticky
  background #EF9831

#done .c-sticky
  background #CB2B55

.p-task-edit
  position absolute
  top 0
  right 0
  padding 10px 15px 10px 10px

.is-drag
  transform rotate(7deg)
