extends layouts/_layout.jade

block append init
  - pageTitle = 'SQUIRREL';
  - bodyClass = 'main';

block content
  .l-wrapper
    .l-side
      .p-logo-area
        img.p-logo-image(src="images/logo.png", alt="SQUIRREL" width="100")
        h1.p-logo
          | SQUIRREL
      .p-task-wholeArea
        button.c-button.is-create.new-task-button
          | タスクを作成
        p.p-task-wholeArea__text
          a.p-task-wholeArea__text--anchor(href="")
            | 全てのタスクを削除
      .p-task-logArea
        h2.p-task-logArea__title
          | HISTORY (履歴)
        p.p-task-logArea__remove
          a(href="#")
            | 履歴を削除する
        .log-area
      p.p-copyright
        | Copyright © 2016 sadakoa All Rights Reserved.
  
    .l-main
      .c-card.p-backlog-card
        h2.c-card__title
          | Backlog
        a.p-task-addButton(href="#")
          img.p-task-addButton__img(src='images/plus.png' width="25")
        ul.p-task-listArea#backlog
              
      .c-card.p-doing-card
        h2.c-card__title
          | Doing
        a.p-task-addButton(href="#")
          img.p-task-addButton__img(src='images/plus.png' width="25")
        ul.p-task-listArea#doing
              
      .c-card.p-done-card
        h2.c-card__title
          | Done
        ul.p-task-listArea#done
    
    
      
